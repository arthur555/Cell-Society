<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Slider?>

<GridPane fx:controller="View.UIManager"
          xmlns:fx="http://javafx.com/fxml" alignment="CENTER_RIGHT" hgap="10" vgap="10" >
    <padding><Insets left="150" right="40"/></padding>

    <Label text="Width:"
           GridPane.columnIndex="0" GridPane.rowIndex="0"/>

    <TextField maxWidth="50" fx:id="widthTextField"
               GridPane.columnIndex="1" GridPane.rowIndex="0"/>

    <Label text="Height:"
           GridPane.columnIndex="0" GridPane.rowIndex="2"/>

    <TextField fx:id="heightTextField"
                   GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <HBox spacing="10" alignment="bottom_right"
          GridPane.columnIndex="1" GridPane.rowIndex="3">
        <Button text="Sign In"
                onAction="#handleSubmitButtonAction"/>
    </HBox>

    <Slider GridPane.columnIndex="0" GridPane.rowIndex="3"></Slider>

</GridPane>
