<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Slider?>

<GridPane fx:controller="View.UIManager"
          xmlns:fx="http://javafx.com/fxml" alignment="CENTER_RIGHT" hgap="10" vgap="10"
          gridLinesVisible="false" maxWidth="400">
    <padding><Insets left="150" right="40"/></padding>

    <Label text="Width:" minWidth="40"
           GridPane.columnIndex="0" GridPane.rowIndex="0"/>

    <TextField fx:id="widthTextField" maxWidth="50"
               GridPane.columnIndex="1" GridPane.rowIndex="0"/>

    <Label text="Height:"
           GridPane.columnIndex="2" GridPane.rowIndex="0"/>

    <TextField fx:id="heightTextField" maxWidth="50"
                   GridPane.columnIndex="3" GridPane.rowIndex="0"/>

    <Label text="Speed:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <Slider fx:id="slider" GridPane.columnIndex="1" GridPane.rowIndex="1"
            GridPane.columnSpan="2" maxWidth="110"/>

    <HBox spacing="10" alignment="bottom_right"
          GridPane.columnIndex="3" GridPane.rowIndex="1">
        <Button text="Apply"
                onAction="#handleApplyButtonAction"/>
    </HBox>

</GridPane>
